<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jdproducerjudiciary.dao.JudCategoryDao">

    <resultMap type="com.example.jdproducerjudiciary.entity.JudCategory" id="JudCategoryMap">
        <result property="judCategoryid" column="jud_categoryid" jdbcType="INTEGER"/>
        <result property="judCategoryname" column="jud_categoryname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="JudCategoryMap">
        select
          jud_categoryname
        from jud_category
        where jud_categoryid = #{judCategoryid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="JudCategoryMap">
        select
          jud_categoryid, jud_categoryname
        from jud_category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAllcate" resultMap="JudCategoryMap">
        select
          jud_categoryid, jud_categoryname
        from jud_category
        <where>
            <if test="judCategoryid != null">
                and jud_categoryid = #{judCategoryid}
            </if>
            <if test="judCategoryname != null and judCategoryname != ''">
                and jud_categoryname = #{judCategoryname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="judCategoryid" useGeneratedKeys="true">
        insert into jud_category(jud_categoryname)
        values (#{judCategoryname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jud_category
        <set>
            <if test="judCategoryname != null and judCategoryname != ''">
                jud_categoryname = #{judCategoryname},
            </if>
        </set>
        where jud_categoryid = #{judCategoryid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jud_category where jud_categoryid = #{judCategoryid}
    </delete>

</mapper>
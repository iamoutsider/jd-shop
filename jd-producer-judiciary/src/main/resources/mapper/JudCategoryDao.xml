<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jdproducerjudiciary.dao.JudCategoryDao">

    <resultMap type="com.example.jdproducerjudiciary.entity.JudCategory" id="JudCategoryMap">
        <result property="judCategoryid" column="jud_categoryid" jdbcType="INTEGER"/>
        <result property="judType" column="jud_type" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="JudCategoryMap">
        select
          jud_categoryid, jud_type
        from jd_judiciary.jud_category
        where jud_categoryid = #{judCategoryid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="JudCategoryMap">
        select
          jud_categoryid, jud_type
        from jd_judiciary.jud_category
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="JudCategoryMap">
        select
          jud_categoryid, jud_type
        from jd_judiciary.jud_category
        <where>
            <if test="judCategoryid != null">
                and jud_categoryid = #{judCategoryid}
            </if>
            <if test="judType != null and judType != ''">
                and jud_type = #{judType}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="judCategoryid" useGeneratedKeys="true">
        insert into jd_judiciary.jud_category(jud_type)
        values (#{judType})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jd_judiciary.jud_category
        <set>
            <if test="judType != null and judType != ''">
                jud_type = #{judType},
            </if>
        </set>
        where jud_categoryid = #{judCategoryid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jd_judiciary.jud_category where jud_categoryid = #{judCategoryid}
    </delete>

</mapper>